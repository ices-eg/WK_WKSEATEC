version: '3'

services:
  angular:
    networks:
      gallerynet:
    image: cianmc/angular-gallery-app:latest
    ports:
      - '5555:4200'

  express:
    networks: 
      gallerynet:
    image: cianmc/node-gallery-app:latest
    ports:
      - '3000:3000'
    environment:    
      HOST: 192.168.0.1
      DOCKER: tcp://192.168.0.1:2375
      DIR: "${DIR:?err}"
    volumes:
      - ./config/:/usr/src/app/mounts/config/
      - ./dashboard/:/usr/src/app/dashboard/

  
{{#each images}}
  {{this.name}}:
    image: {{this.image}}
    ports:
      - '3838'
    volumes:
      - ./data/:/srv/shiny-server/data
{{/each}}

networks: 
  gallerynet:
    external: true
